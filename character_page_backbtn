    .left-panel { flex: 0 0 300px; margin-top: 60px; }
    .user-info-table { width: 100%; border-collapse: collapse; font-size: 14px; }
    .user-info-table th, .user-info-table td { border: 1px solid #ccc; padding: 6px; text-align: left; }
    .user-info-table th { background-color: #f0f0f0; width: 40%; }
    .right-panel { flex: 0 0 500px; display: flex; flex-direction: column; align-items: center; }
    .character-img { width: 350px; height: 420px; background-color: #f0f0f0; border: 1px solid #ccc; border-radius: 8px; margin-bottom: 30px; overflow: hidden; }
